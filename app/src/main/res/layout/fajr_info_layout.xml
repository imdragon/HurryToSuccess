<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/irelanddawn"
        android:scaleType="centerCrop"/>
    <TextView
        style="@style/prayerTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fajr"
        android:id="@+id/farjTopLabel"
        android:layout_centerHorizontal="true"/>

    <TextView
        style="@style/prayerTextStyle"
        android:id="@+id/rakats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2 rakats"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/farjTopLabel"/>

    <TextView
        style="@style/prayerTextStyle"
        android:id="@+id/description"
        android:layout_below="@id/rakats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fajr_info"/>

</RelativeLayout>